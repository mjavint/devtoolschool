<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="widget_geolocation_map.MapWidget">
        <div class="o_field_widget">
            <div class="input-group">
                <span class="input-group-text">𝞿</span>
                <input type="text" class="form-control" t-model="state.coordinates.latitude"/>
                <span class="input-group-text">𝛌</span>
                <input type="text" class="form-control" t-model="state.coordinates.longitude"/>
                <button type="button" class="btn btn-primary" t-on-click="openMapPopover" t-ref="popupRef">
                    <i class="fa fa-map"></i>
                </button>
            </div>
        </div>
    </t>
</templates>
