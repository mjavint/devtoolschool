<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_env.TaskList">
        <div class="o-todolist border m-1 p-2">
            <h3>
                <t t-esc="props.name"/>
            </h3>
            <input type="text"
                placeholder="Add a Task"
                t-ref="input"
                class="form-control mb-3"
                t-on-keyup="addTask"/>
            <div class="m-2">
                <t t-foreach="tasks"
                    t-as="task"
                    t-key="task.id">
                    <TaskItem task="task"
                        toggle.bind="toggleTask"
                        remove.bind="removeTask"/>
                </t>
            </div>
        </div>
    </t>

</templates>
